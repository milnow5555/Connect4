<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.milnow5555.connect4">

    <application
        android:allowBackup="true"
        android:icon="@drawable/connectlogo"
        android:label="@string/app_name_button"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.OptionsActivity" />
        <activity android:name=".Activities.GameActivity" />
        <activity
            android:name=".Activities.EndGameActivity"
            android:label="@string/title_activity_end_game"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>